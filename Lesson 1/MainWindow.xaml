<Window x:Class="Lesson_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson_1"
        mc:Ignorable="d"
        TextBoxBase.TextChanged="Window_TextChanged"
        Title="MainWindow" Height="450" Width="800">
    <Grid TextBoxBase.TextChanged="Grid_TextChanged">
        <TextBox HorizontalAlignment="Left" Margin="28,28,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        <RadioButton Name="radioButton1" Content="Handle Textbox.TextChanged in TextBox" HorizontalAlignment="Left" Margin="190,28,0,0" VerticalAlignment="Top"/>
        <RadioButton Name="radioButton2" Content="Handle Textbox.TextChanged in Grid" HorizontalAlignment="Left" Margin="190,48,0,0" VerticalAlignment="Top"/>
        <RadioButton Name="radioButton3" Content="Handle Textbox.TextChanged in Window" HorizontalAlignment="Left" Margin="190,68,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
